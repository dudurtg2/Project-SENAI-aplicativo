<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/item_background"
    tools:layout_editor_absoluteY="0dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/MainPratosimage"
        android:layout_width="147dp"
        android:layout_height="142dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/MainPratosName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/MainPratosName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/MainPratosimage"
        app:layout_constraintStart_toStartOf="@+id/MainPratosimage"
        app:layout_constraintTop_toBottomOf="@+id/MainPratosimage" />


</androidx.constraintlayout.widget.ConstraintLayout>