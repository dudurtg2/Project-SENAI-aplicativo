<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    android:background="@drawable/item_background"
    tools:layout_editor_absoluteY="0dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/MainPratosPrincipalImage"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/MainPratosPrincipalName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/MainPratosPrincipalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/MainPratosPrincipalImage"
        app:layout_constraintStart_toStartOf="@+id/MainPratosPrincipalImage"
        app:layout_constraintTop_toBottomOf="@+id/MainPratosPrincipalImage" />


</androidx.constraintlayout.widget.ConstraintLayout>