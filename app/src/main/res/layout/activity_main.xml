<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.Main.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainPrincipalViewPratos2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainPrincipalViewPratos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="411dp"
            android:layout_height="164dp"
            android:background="@drawable/baselayoutdishesdetails"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/imageButtonUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:background="@color/transparente"
            android:drawableStart="@drawable/base_iconuser"
            android:gravity="center_vertical|left"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="173dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/applogowhite" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainPrincipalViewPratos0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageButton
            android:id="@+id/MainPrincipalCategoryDricks"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/MainPrincipalCategoryPateis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainPrincipalViewPratos0"
            app:srcCompat="@drawable/mainbebidas" />

        <ImageButton
            android:id="@+id/MainPrincipalCategoryDirt"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toEndOf="@+id/MainPrincipalCategoryPateis"
            app:layout_constraintTop_toBottomOf="@+id/MainPrincipalViewPratos0"
            app:srcCompat="@drawable/mainveganos" />

        <ImageButton
            android:id="@+id/MainPrincipalCategoryPateis"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toStartOf="@+id/MainPrincipalCategoryDirt"
            app:layout_constraintStart_toEndOf="@+id/MainPrincipalCategoryDricks"
            app:layout_constraintTop_toBottomOf="@+id/MainPrincipalViewPratos0"
            app:srcCompat="@drawable/mainsalgados" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inknut_antiqua"
            android:text="Mais pedidos"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainPrincipalViewCategory" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inknut_antiqua"
            android:text="Recomendados"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainPrincipalViewPratos2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/MainPrincipalViewCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/button_stroke_gray"
            android:gravity="center_vertical|left"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:layout_marginTop="64dp"
            android:text="TextView"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/MainPrincipalViewPratos0"
            tools:layout_editor_absoluteX="0dp"
            tools:visibility="invisible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="visible"
        android:layout_gravity="start|bottom"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <ImageButton
        android:id="@+id/imageButtonBusca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/base_image_cart_oregan" />
</FrameLayout>
